<Window x:Class="PDSCalculatorDesktop.Views.SubstanceEditView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:converters="clr-namespace:PDSCalculatorDesktop.Converters"
        mc:Ignorable="d"
        Title="{Binding WindowTitle}" 
        Height="550" 
        Width="550"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="{DynamicResource MaterialDesignPaper}"
        FontFamily="{DynamicResource MaterialDesignFont}">

    <Window.Resources>
        <converters:HazardClassConverter x:Key="HazardClassConverter"/>
    </Window.Resources>

    <!-- Основной контейнер с отступами и тенью -->
    <materialDesign:Card Margin="20" 
                        Padding="25"
                        UniformCornerRadius="15">

        <Grid>
            <!-- Определяем 9 строк -->
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Строка 0: Подпись "Код вещества" -->
                <RowDefinition Height="Auto"/>
                <!-- Строка 1: Поле ввода кода -->
                <RowDefinition Height="Auto"/>
                <!-- Строка 2: Подпись "Название вещества" -->
                <RowDefinition Height="Auto"/>
                <!-- Строка 3: Поле ввода названия -->
                <RowDefinition Height="Auto"/>
                <!-- Строка 4: Подпись "Группа ЛФВ" -->
                <RowDefinition Height="Auto"/>
                <!-- Строка 5: Поле ввода группы ЛФВ -->
                <RowDefinition Height="Auto"/>
                <!-- Строка 6: Подпись "Класс опасности" -->
                <RowDefinition Height="Auto"/>
                <!-- Строка 7: ComboBox класса опасности -->
                <RowDefinition Height="*"/>
                <!-- Строка 8: Пустое место + кнопки внизу -->
            </Grid.RowDefinitions>

            <!-- ============================================ -->
            <!-- СТРОКА 0: Подпись "Код вещества" -->
            <!-- ============================================ -->
            <TextBlock Grid.Row="0" 
                       Text="Код вещества:"
                       Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                       Foreground="#F57C00"
                       Margin="0,0,0,5"/>

            <!-- ============================================ -->
            <!-- СТРОКА 1: Поле ввода кода вещества -->
            <!-- ============================================ -->
            <TextBox Grid.Row="1"
                     Text="{Binding Code, UpdateSourceTrigger=PropertyChanged}"
                     materialDesign:HintAssist.Hint="Введите уникальный код"
                     Style="{StaticResource MaterialDesignOutlinedTextBox}"
                     FontSize="14"
                     Margin="0,0,0,20">
            </TextBox>

            <!-- ============================================ -->
            <!-- СТРОКА 2: Подпись "Название вещества" -->
            <!-- ============================================ -->
            <TextBlock Grid.Row="2" 
                       Text="Название вещества:"
                       Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                       Foreground="#F57C00"
                       Margin="0,0,0,5"/>

            <!-- ============================================ -->
            <!-- СТРОКА 3: Поле ввода названия вещества -->
            <!-- ============================================ -->
            <TextBox Grid.Row="3"
                     Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}"
                     materialDesign:HintAssist.Hint="Введите полное название"
                     Style="{StaticResource MaterialDesignOutlinedTextBox}"
                     FontSize="14"
                     Margin="0,0,0,20"/>

            <!-- ============================================ -->
            <!-- СТРОКА 4: Подпись "Группа ЛФВ" -->
            <!-- ============================================ -->
            <TextBlock Grid.Row="4" 
                       Text="Группа ЛФВ (Лимитирующий фактор вредности):"
                       Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                       Foreground="#F57C00"
                       Margin="0,0,0,5"/>

            <!-- ============================================ -->
            <!-- СТРОКА 5: Поле ввода группы ЛФВ -->
            <!-- ============================================ -->
            <TextBox Grid.Row="5"
                     Text="{Binding GroupLFV, UpdateSourceTrigger=PropertyChanged}"
                     materialDesign:HintAssist.Hint="Например: органолептический, токсикологический"
                     Style="{StaticResource MaterialDesignOutlinedTextBox}"
                     FontSize="14"
                     Margin="0,0,0,20"/>

            <!-- ============================================ -->
            <!-- СТРОКА 6: Подпись "Класс опасности" -->
            <!-- ============================================ -->
            <TextBlock Grid.Row="6" 
                       Text="Класс опасности:"
                       Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                       Foreground="#F57C00"
                       Margin="0,0,0,5"/>

            <!-- ============================================ -->
            <!-- СТРОКА 7: ComboBox класса опасности -->
            <!-- ============================================ -->
            <ComboBox Grid.Row="7"
                      x:Name="HazardClassComboBox"
                      ItemsSource="{Binding HazardClasses}"
                      SelectedItem="{Binding HazardClass, UpdateSourceTrigger=PropertyChanged}"
                      materialDesign:HintAssist.Hint="Выберите класс опасности"
                      Style="{StaticResource MaterialDesignOutlinedComboBox}"
                      FontSize="14"
                      Margin="0,0,0,20">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding Converter={StaticResource HazardClassConverter}}" />
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>

            <!-- ============================================ -->
            <!-- СТРОКА 8: Кнопки в правом нижнем углу -->
            <!-- ============================================ -->
            <StackPanel Grid.Row="8" 
                        Orientation="Horizontal" 
                        HorizontalAlignment="Right"
                        VerticalAlignment="Bottom">

                <!-- Кнопка: Сохранить (оранжевая, с иконкой) -->
                <Button Command="{Binding SaveCommand}"
                        Style="{StaticResource MaterialDesignRaisedButton}"
                        Width="140"
                        Height="40"
                        Margin="0,0,15,0"
                        Background="#F57C00"
                        BorderBrush="#F57C00"
                        materialDesign:ButtonAssist.CornerRadius="10"
                        materialDesign:ElevationAssist.Elevation="Dp4">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="ContentSave" 
                                                Width="20" 
                                                Height="20"
                                                VerticalAlignment="Center"/>
                        <TextBlock Text="Сохранить" 
                                  Margin="8,0,0,0"
                                  VerticalAlignment="Center"
                                  FontSize="13"
                                  FontWeight="Medium"/>
                    </StackPanel>
                </Button>

                <!-- Кнопка: Отменить (серая, с иконкой) -->
                <Button Command="{Binding CancelCommand}"
                        Style="{StaticResource MaterialDesignRaisedButton}"
                        Width="140"
                        Height="40"
                        Background="#757575"
                        BorderBrush="#757575"
                        materialDesign:ButtonAssist.CornerRadius="10"
                        materialDesign:ElevationAssist.Elevation="Dp4">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="Close" 
                                                Width="20" 
                                                Height="20"
                                                VerticalAlignment="Center"/>
                        <TextBlock Text="Отменить" 
                                  Margin="8,0,0,0"
                                  VerticalAlignment="Center"
                                  FontSize="13"
                                  FontWeight="Medium"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </Grid>
    </materialDesign:Card>
</Window>