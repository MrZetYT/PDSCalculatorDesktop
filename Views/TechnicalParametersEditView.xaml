<Window x:Class="PDSCalculatorDesktop.Views.TechnicalParametersEditView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Добавление технических параметров" 
        Height="620" 
        Width="600"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="{DynamicResource MaterialDesignPaper}"
        FontFamily="{DynamicResource MaterialDesignFont}">

    <ScrollViewer Grid.Row="1" 
             VerticalScrollBarVisibility="Auto"
             HorizontalScrollBarVisibility="Disabled">
        <materialDesign:Card Margin="20" Padding="25" UniformCornerRadius="15">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Text="Дата начала действия:"
                       Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                       Foreground="#1976D2" Margin="0,0,0,5"/>
                <DatePicker Grid.Row="1" SelectedDate="{Binding ValidFrom}"
                       materialDesign:HintAssist.Hint="Выберите дату"
                       Style="{StaticResource MaterialDesignOutlinedDatePicker}"
                       FontSize="14" Margin="0,0,0,15"/>

                <TextBlock Grid.Row="2" Text="Диаметр выпуска (м):"
                       Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                       Foreground="#1976D2" Margin="0,0,0,5"/>
                <TextBox Grid.Row="3" Text="{Binding Diameter}"
                     materialDesign:HintAssist.Hint="Введите диаметр"
                     Style="{StaticResource MaterialDesignOutlinedTextBox}"
                     FontSize="14" Margin="0,0,0,15"/>

                <TextBlock Grid.Row="4" Text="Расход сточных вод (м³/с):"
                       Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                       Foreground="#1976D2" Margin="0,0,0,5"/>
                <TextBox Grid.Row="5" Text="{Binding FlowRate}"
                     materialDesign:HintAssist.Hint="Введите расход"
                     Style="{StaticResource MaterialDesignOutlinedTextBox}"
                     FontSize="14" Margin="0,0,0,15"/>

                <TextBlock Grid.Row="6" Text="Скорость течения (м/с):"
                       Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                       Foreground="#1976D2" Margin="0,0,0,5"/>
                <TextBox Grid.Row="7" Text="{Binding WaterFlowVelocity}"
                     materialDesign:HintAssist.Hint="Введите скорость"
                     Style="{StaticResource MaterialDesignOutlinedTextBox}"
                     FontSize="14" Margin="0,0,0,15"/>

                <TextBlock Grid.Row="8" Text="Угол истечения (°):"
                       Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                       Foreground="#1976D2" Margin="0,0,0,5"/>
                <TextBox Grid.Row="9" Text="{Binding DischargeAngle}"
                     materialDesign:HintAssist.Hint="Введите угол (0-360)"
                     Style="{StaticResource MaterialDesignOutlinedTextBox}"
                     FontSize="14" Margin="0,0,0,15"/>

                <TextBlock Grid.Row="10" Text="Расстояние до поверхности (м):"
                       Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                       Foreground="#1976D2" Margin="0,0,0,5"/>
                <TextBox Grid.Row="11" Text="{Binding DistanceToWaterSurface}"
                     materialDesign:HintAssist.Hint="Введите расстояние"
                     Style="{StaticResource MaterialDesignOutlinedTextBox}"
                     FontSize="14" Margin="0,0,0,15"/>

                <TextBlock Grid.Row="12" Text="Расстояние до берега (м):"
                       Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                       Foreground="#1976D2" Margin="0,0,0,5"/>
                <TextBox Grid.Row="13" Text="{Binding DistanceToShore}"
                     materialDesign:HintAssist.Hint="Введите расстояние"
                     Style="{StaticResource MaterialDesignOutlinedTextBox}"
                     FontSize="14" Margin="0,0,0,15"/>

                <TextBlock Grid.Row="14" Text="Расстояние до контрольного створа (м):"
                       Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                       Foreground="#1976D2" Margin="0,0,0,5"/>
                <TextBox Grid.Row="15" Text="{Binding DistanceToControlPoint}"
                     materialDesign:HintAssist.Hint="Введите расстояние"
                     Style="{StaticResource MaterialDesignOutlinedTextBox}"
                     FontSize="14" Margin="0,0,0,15"/>

                <StackPanel Grid.Row="17" Orientation="Horizontal" 
                        HorizontalAlignment="Right" VerticalAlignment="Bottom">
                    <Button Command="{Binding SaveCommand}"
                        Style="{StaticResource MaterialDesignRaisedButton}"
                        Width="140" Height="40" Margin="0,0,15,0"
                        Background="#1976D2" BorderBrush="#1976D2"
                        materialDesign:ButtonAssist.CornerRadius="10">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="ContentSave" Width="20" Height="20"/>
                            <TextBlock Text="Сохранить" Margin="8,0,0,0" FontSize="13"/>
                        </StackPanel>
                    </Button>
                    <Button Command="{Binding CancelCommand}"
                        Style="{StaticResource MaterialDesignRaisedButton}"
                        Width="140" Height="40"
                        Background="#757575" BorderBrush="#757575"
                        materialDesign:ButtonAssist.CornerRadius="10">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Close" Width="20" Height="20"/>
                            <TextBlock Text="Отменить" Margin="8,0,0,0" FontSize="13"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Grid>
        </materialDesign:Card>
    </ScrollViewer>
</Window>