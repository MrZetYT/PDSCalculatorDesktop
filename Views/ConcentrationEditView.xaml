<Window x:Class="PDSCalculatorDesktop.Views.ConcentrationEditView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="{Binding WindowTitle}" 
        Height="480" 
        Width="550"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="{DynamicResource MaterialDesignPaper}"
        FontFamily="{DynamicResource MaterialDesignFont}">

    <materialDesign:Card Margin="20" Padding="25" UniformCornerRadius="15">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Text="Вещество:"
                       Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                       Foreground="#F57C00" Margin="0,0,0,5"/>

            <ComboBox Grid.Row="1"
                      ItemsSource="{Binding Substances}"
                      SelectedItem="{Binding SelectedSubstance}"
                      materialDesign:HintAssist.Hint="Выберите вещество"
                      Style="{StaticResource MaterialDesignOutlinedComboBox}"
                      FontSize="14" Margin="0,0,0,20">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel>
                            <TextBlock Text="{Binding Name}" FontWeight="Medium"/>
                            <TextBlock Text="{Binding Code}" FontSize="11" Foreground="Gray" Margin="0,2,0,0"/>
                        </StackPanel>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>

            <TextBlock Grid.Row="2" Text="Концентрация (мг/дм³):"
                       Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                       Foreground="#F57C00" Margin="0,0,0,5"/>

            <TextBox Grid.Row="3"
                     Text="{Binding Concentration, UpdateSourceTrigger=PropertyChanged}"
                     materialDesign:HintAssist.Hint="Введите концентрацию"
                     Style="{StaticResource MaterialDesignOutlinedTextBox}"
                     FontSize="14" Margin="0,0,0,20"/>

            <TextBlock Grid.Row="4" Text="Дата измерения:"
                       Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                       Foreground="#F57C00" Margin="0,0,0,5"/>

            <DatePicker Grid.Row="5"
                        SelectedDate="{Binding MeasurementDate}"
                        materialDesign:HintAssist.Hint="Выберите дату"
                        Style="{StaticResource MaterialDesignOutlinedDatePicker}"
                        FontSize="14" Margin="0,0,0,20"/>

            <StackPanel Grid.Row="6" Orientation="Horizontal" 
                        HorizontalAlignment="Right" VerticalAlignment="Bottom">
                <Button Command="{Binding SaveCommand}"
                        Style="{StaticResource MaterialDesignRaisedButton}"
                        Width="140" Height="40" Margin="0,0,15,0"
                        Background="#F57C00" BorderBrush="#F57C00"
                        materialDesign:ButtonAssist.CornerRadius="10"
                        IsEnabled="{Binding IsSaving, Converter={StaticResource InvertBooleanConverter}}">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="ContentSave" Width="20" Height="20"/>
                        <TextBlock Text="Сохранить" Margin="8,0,0,0" FontSize="13"/>
                    </StackPanel>
                </Button>
                <Button Command="{Binding CancelCommand}"
                        Style="{StaticResource MaterialDesignRaisedButton}"
                        Width="140" Height="40"
                        Background="#757575" BorderBrush="#757575"
                        materialDesign:ButtonAssist.CornerRadius="10"
                        IsEnabled="{Binding IsSaving, Converter={StaticResource InvertBooleanConverter}}">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="Close" Width="20" Height="20"/>
                        <TextBlock Text="Отменить" Margin="8,0,0,0" FontSize="13"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </Grid>
    </materialDesign:Card>
</Window>