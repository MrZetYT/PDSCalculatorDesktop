<Window x:Class="PDSCalculatorDesktop.Views.MeasurementView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:converters="clr-namespace:PDSCalculatorDesktop.Converters"
        mc:Ignorable="d"
        Title="Управление измерениями" 
        Height="700" 
        Width="1400"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource MaterialDesignPaper}"
        FontFamily="{DynamicResource MaterialDesignFont}">

    <Window.Resources>
        <converters:MeasurementTypeConverter x:Key="MeasurementTypeConverter"/>
    </Window.Resources>

    <materialDesign:Card Margin="20" 
                        Padding="25"
                        UniformCornerRadius="15"
                        materialDesign:ElevationAssist.Elevation="Dp8">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Заголовок -->
                <RowDefinition Height="Auto"/>
                <!-- Поиск -->
                <RowDefinition Height="*"/>
                <!-- Таблица -->
                <RowDefinition Height="Auto"/>
                <!-- Кнопки -->
            </Grid.RowDefinitions>

            <!-- ============================================ -->
            <!-- СТРОКА 0: Заголовок -->
            <!-- ============================================ -->
            <StackPanel Grid.Row="0" 
                       Orientation="Horizontal" 
                       Margin="0,0,0,20">
                <materialDesign:PackIcon Kind="ChartLineVariant" 
                                        Width="32" 
                                        Height="32"
                                        VerticalAlignment="Center" 
                                        Foreground="#2196F3"/>
                <TextBlock Text="Управление измерениями"
                          Style="{StaticResource MaterialDesignHeadline5TextBlock}"
                          VerticalAlignment="Center"
                          Margin="12,0,0,0"
                          Foreground="#2196F3"/>
            </StackPanel>

            <!-- ============================================ -->
            <!-- СТРОКА 1: Поиск -->
            <!-- ============================================ -->
            <materialDesign:Card Grid.Row="1" 
                                Padding="15"
                                Margin="0,0,0,20"
                                UniformCornerRadius="10"
                                Background="#E3F2FD">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <materialDesign:PackIcon Grid.Column="0"
                                            Kind="Magnify"
                                            Width="24"
                                            Height="24"
                                            VerticalAlignment="Center"
                                            Margin="0,0,10,0"
                                            Foreground="#2196F3"/>

                    <TextBox Grid.Column="1"
                            Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                            materialDesign:HintAssist.Hint="Поиск по веществу, типу измерения, значению или дате"
                            Style="{StaticResource MaterialDesignOutlinedTextBox}"
                            FontSize="14"
                            VerticalContentAlignment="Center"/>
                </Grid>
            </materialDesign:Card>

            <!-- ============================================ -->
            <!-- СТРОКА 2: Таблица измерений -->
            <!-- ============================================ -->
            <materialDesign:Card Grid.Row="2"
                                Margin="0,0,0,20"
                                UniformCornerRadius="10">
                <DataGrid ItemsSource="{Binding Measurements}"
                         SelectedItem="{Binding SelectedMeasurement}"
                         AutoGenerateColumns="False"
                         IsReadOnly="True"
                         SelectionMode="Single"
                         CanUserAddRows="False"
                         CanUserDeleteRows="False"
                         CanUserResizeRows="False"
                         GridLinesVisibility="Horizontal"
                         HeadersVisibility="Column"
                         RowBackground="White"
                         FontSize="13"
                         materialDesign:DataGridAssist.CellPadding="10 8 10 8"
                         materialDesign:DataGridAssist.ColumnHeaderPadding="20 12 10 12"
                         MouseLeftButtonDown="DataGrid_MouseLeftButtonDown">

                    <DataGrid.ColumnHeaderStyle>
                        <Style TargetType="DataGridColumnHeader" BasedOn="{StaticResource MaterialDesignDataGridColumnHeader}">
                            <Setter Property="FontWeight" Value="SemiBold"/>
                            <Setter Property="FontSize" Value="14"/>
                            <Setter Property="Foreground" Value="#2196F3"/>
                        </Style>
                    </DataGrid.ColumnHeaderStyle>

                    <DataGrid.RowStyle>
                        <Style TargetType="DataGridRow" BasedOn="{StaticResource MaterialDesignDataGridRow}">
                            <Setter Property="Height" Value="45"/>
                            <Setter Property="Background" Value="White"/>
                            <Setter Property="BorderThickness" Value="4,0,0,0"/>
                            <Setter Property="BorderBrush" Value="Transparent"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#BBDEFB"/>
                                </Trigger>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="Background" Value="#E3F2FD"/>
                                    <Setter Property="BorderBrush" Value="#2196F3"/>
                                </Trigger>
                                <MultiTrigger>
                                    <MultiTrigger.Conditions>
                                        <Condition Property="IsSelected" Value="True"/>
                                        <Condition Property="IsMouseOver" Value="True"/>
                                    </MultiTrigger.Conditions>
                                    <Setter Property="Background" Value="#90CAF9"/>
                                </MultiTrigger>
                            </Style.Triggers>
                        </Style>
                    </DataGrid.RowStyle>

                    <DataGrid.CellStyle>
                        <Style TargetType="DataGridCell" BasedOn="{StaticResource MaterialDesignDataGridCell}">
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
                            <Style.Triggers>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Setter Property="Foreground" Value="{DynamicResource MaterialDesignBody}"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </DataGrid.CellStyle>

                    <DataGrid.Columns>
                        <!-- Вещество -->
                        <DataGridTextColumn Header="Вещество"
                                            Binding="{Binding Substance.Name}" 
                                            Width="200">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="FontWeight" Value="Medium"/>
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <!-- Тип измерения -->
                        <DataGridTextColumn Header="Тип измерения" 
                                           Binding="{Binding MeasurementType, Converter={StaticResource MeasurementTypeConverter}}" 
                                           Width="*">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                    <Setter Property="TextWrapping" Value="Wrap"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <!-- Значение -->
                        <DataGridTextColumn Header="Значение (мг/л)" 
                                           Binding="{Binding Value, StringFormat='{}{0:N4}'}" 
                                           Width="140">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                    <Setter Property="HorizontalAlignment" Value="Right"/>
                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <!-- Дата -->
                        <DataGridTextColumn Header="Дата измерения" 
                                           Binding="{Binding Date, StringFormat='dd.MM.yyyy'}" 
                                           Width="140">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                    <Setter Property="HorizontalAlignment" Value="Center"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <!-- Привязка -->
                        <DataGridTemplateColumn Header="Привязка" Width="250">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel>
                                        <TextBlock FontWeight="Medium">
                                            <Run Text="{Binding Discharge.Name, Mode=OneWay, FallbackValue=''}"/>
                                            <Run Text="{Binding ControlPoint.Name, Mode=OneWay, FallbackValue=''}"/>
                                        </TextBlock>
                                        <TextBlock FontSize="11" Foreground="Gray" Margin="0,2,0,0">
                                            <Run Text="{Binding Discharge.Code, Mode=OneWay, StringFormat='Выпуск: {0}', FallbackValue=''}"/>
                                            <Run Text="{Binding ControlPoint.Number, Mode=OneWay, StringFormat='Створ №{0}', FallbackValue=''}"/>
                                        </TextBlock>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </materialDesign:Card>

            <!-- ============================================ -->
            <!-- СТРОКА 3: Кнопки управления -->
            <!-- ============================================ -->
            <StackPanel Grid.Row="3" 
                       Orientation="Horizontal" 
                       HorizontalAlignment="Left">

                <Button Command="{Binding AddCommand}"
                       Style="{StaticResource MaterialDesignRaisedButton}"
                       Width="140"
                       Height="40"
                       Margin="0,0,12,0"
                       Background="#2196F3"
                       BorderBrush="#2196F3"
                       materialDesign:ButtonAssist.CornerRadius="10"
                       materialDesign:ElevationAssist.Elevation="Dp4">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="Plus" 
                                                Width="20" 
                                                Height="20"
                                                VerticalAlignment="Center"/>
                        <TextBlock Text="Добавить" 
                                  Margin="8,0,0,0"
                                  VerticalAlignment="Center"
                                  FontSize="13"
                                  FontWeight="Medium"/>
                    </StackPanel>
                </Button>

                <Button Command="{Binding EditCommand}"
                       Style="{StaticResource MaterialDesignRaisedButton}"
                       Width="140"
                       Height="40"
                       Margin="0,0,12,0"
                       Background="#FF9800"
                       BorderBrush="#FF9800"
                       materialDesign:ButtonAssist.CornerRadius="10"
                       materialDesign:ElevationAssist.Elevation="Dp4">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="Pencil" 
                                                Width="20" 
                                                Height="20"
                                                VerticalAlignment="Center"/>
                        <TextBlock Text="Изменить" 
                                  Margin="8,0,0,0"
                                  VerticalAlignment="Center"
                                  FontSize="13"
                                  FontWeight="Medium"/>
                    </StackPanel>
                </Button>

                <Button Command="{Binding DeleteCommand}"
                       Style="{StaticResource MaterialDesignRaisedButton}"
                       Width="140"
                       Height="40"
                       Margin="0,0,12,0"
                       Background="#D32F2F"
                       BorderBrush="#D32F2F"
                       materialDesign:ButtonAssist.CornerRadius="10"
                       materialDesign:ElevationAssist.Elevation="Dp4">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="Delete" 
                                                Width="20" 
                                                Height="20"
                                                VerticalAlignment="Center"/>
                        <TextBlock Text="Удалить" 
                                  Margin="8,0,0,0"
                                  VerticalAlignment="Center"
                                  FontSize="13"
                                  FontWeight="Medium"/>
                    </StackPanel>
                </Button>

                <Button Command="{Binding RefreshCommand}"
                       Style="{StaticResource MaterialDesignRaisedButton}"
                       Width="140"
                       Height="40"
                       Background="#616161"
                       BorderBrush="#616161"
                       materialDesign:ButtonAssist.CornerRadius="10"
                       materialDesign:ElevationAssist.Elevation="Dp4">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="Refresh" 
                                                Width="20" 
                                                Height="20"
                                                VerticalAlignment="Center"/>
                        <TextBlock Text="Обновить" 
                                  Margin="8,0,0,0"
                                  VerticalAlignment="Center"
                                  FontSize="13"
                                  FontWeight="Medium"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </Grid>
    </materialDesign:Card>
</Window>