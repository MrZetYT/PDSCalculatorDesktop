<Window x:Class="PDSCalculatorDesktop.Views.EnterpriseEditView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="{Binding WindowTitle}" 
        Height="360" 
        Width="550"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="{DynamicResource MaterialDesignPaper}"
        FontFamily="{DynamicResource MaterialDesignFont}">

    <!-- Основной контейнер с отступами и тенью -->
    <materialDesign:Card Margin="20" 
                        Padding="25"
                        UniformCornerRadius="15">

        <Grid>
            <!-- Определяем 5 строк -->
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Строка 0: Подпись "Код" -->
                <RowDefinition Height="Auto"/>
                <!-- Строка 1: Поле ввода кода -->
                <RowDefinition Height="Auto"/>
                <!-- Строка 2: Подпись "Название" -->
                <RowDefinition Height="Auto"/>
                <!-- Строка 3: Поле ввода названия -->
                <RowDefinition Height="*"/>
                <!-- Строка 4: Пустое место + кнопки внизу -->
            </Grid.RowDefinitions>

            <!-- ============================================ -->
            <!-- СТРОКА 0: Подпись "Код предприятия" -->
            <!-- ============================================ -->
            <TextBlock Grid.Row="0" 
                       Text="Код предприятия:"
                       Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                       Margin="0,0,0,5"/>

            <!-- ============================================ -->
            <!-- СТРОКА 1: Поле ввода кода с Material Design -->
            <!-- ============================================ -->
            <TextBox Grid.Row="1"
                     Text="{Binding Code, UpdateSourceTrigger=PropertyChanged}"
                     materialDesign:HintAssist.Hint="Введите уникальный код"
                     Style="{StaticResource MaterialDesignOutlinedTextBox}"
                     FontSize="14"
                     Margin="0,0,0,20">
            </TextBox>

            <!-- ============================================ -->
            <!-- СТРОКА 2: Подпись "Название предприятия" -->
            <!-- ============================================ -->
            <TextBlock Grid.Row="2" 
                       Text="Название предприятия:"
                       Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                       Margin="0,0,0,5"/>

            <!-- ============================================ -->
            <!-- СТРОКА 3: Поле ввода названия с Material Design -->
            <!-- ============================================ -->
            <TextBox Grid.Row="3"
                     Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}"
                     materialDesign:HintAssist.Hint="Введите полное название"
                     Style="{StaticResource MaterialDesignOutlinedTextBox}"
                     FontSize="14"
                     Margin="0,0,0,20"/>

            <!-- ============================================ -->
            <!-- СТРОКА 4: Кнопки в правом нижнем углу -->
            <!-- ============================================ -->
            <StackPanel Grid.Row="4" 
                        Orientation="Horizontal" 
                        HorizontalAlignment="Right"
                        VerticalAlignment="Bottom">

                <!-- Кнопка: Сохранить (зеленая, с иконкой) -->
                <Button Command="{Binding SaveCommand}"
                        Style="{StaticResource MaterialDesignRaisedButton}"
                        Width="140"
                        Height="40"
                        Margin="0,0,15,0"
                        Background="#4CAF50"
                        BorderBrush="#4CAF50"
                        materialDesign:ButtonAssist.CornerRadius="10"
                        materialDesign:ElevationAssist.Elevation="Dp4">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="ContentSave" 
                                                Width="20" 
                                                Height="20"
                                                VerticalAlignment="Center"/>
                        <TextBlock Text="Сохранить" 
                                  Margin="8,0,0,0"
                                  VerticalAlignment="Center"
                                  FontSize="13"
                                  FontWeight="Medium"/>
                    </StackPanel>
                </Button>

                <!-- Кнопка: Отменить (серая, с иконкой) -->
                <Button Command="{Binding CancelCommand}"
                        Style="{StaticResource MaterialDesignRaisedButton}"
                        Width="140"
                        Height="40"
                        Background="#757575"
                        BorderBrush="#757575"
                        materialDesign:ButtonAssist.CornerRadius="10"
                        materialDesign:ElevationAssist.Elevation="Dp4">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="Close" 
                                                Width="20" 
                                                Height="20"
                                                VerticalAlignment="Center"/>
                        <TextBlock Text="Отменить" 
                                  Margin="8,0,0,0"
                                  VerticalAlignment="Center"
                                  FontSize="13"
                                  FontWeight="Medium"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </Grid>
    </materialDesign:Card>
</Window>