<Window x:Class="PDSCalculatorDesktop.Views.MeasurementEditView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:converters="clr-namespace:PDSCalculatorDesktop.Converters"
        mc:Ignorable="d"
        Title="{Binding WindowTitle}" 
        Height="750" 
        Width="600"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="{DynamicResource MaterialDesignPaper}"
        FontFamily="{DynamicResource MaterialDesignFont}">

    <Window.Resources>
        <converters:MeasurementTypeConverter x:Key="MeasurementTypeConverter"/>
    </Window.Resources>

    <materialDesign:Card Margin="20" 
                        Padding="25"
                        UniformCornerRadius="15">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Подпись "Вещество" -->
                <RowDefinition Height="Auto"/>
                <!-- ComboBox вещества -->
                <RowDefinition Height="Auto"/>
                <!-- Подпись "Тип измерения" -->
                <RowDefinition Height="Auto"/>
                <!-- ComboBox типа -->
                <RowDefinition Height="Auto"/>
                <!-- Подпись "Значение" -->
                <RowDefinition Height="Auto"/>
                <!-- TextBox значения -->
                <RowDefinition Height="Auto"/>
                <!-- Подпись "Дата" -->
                <RowDefinition Height="Auto"/>
                <!-- DatePicker -->
                <RowDefinition Height="Auto"/>
                <!-- Подпись "Привязка" -->
                <RowDefinition Height="Auto"/>
                <!-- RadioButtons -->
                <RowDefinition Height="Auto"/>
                <!-- ComboBox выпуска -->
                <RowDefinition Height="Auto"/>
                <!-- ComboBox створа -->
                <RowDefinition Height="*"/>
                <!-- Пустое место + кнопки -->
            </Grid.RowDefinitions>

            <!-- ============================================ -->
            <!-- Вещество -->
            <!-- ============================================ -->
            <TextBlock Grid.Row="0" 
                       Text="Загрязняющее вещество:"
                       Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                       Foreground="#2196F3"
                       Margin="0,0,0,5"/>

            <ComboBox Grid.Row="1"
                      ItemsSource="{Binding Substances}"
                      SelectedItem="{Binding SelectedSubstance, UpdateSourceTrigger=PropertyChanged}"
                      materialDesign:HintAssist.Hint="Выберите вещество"
                      Style="{StaticResource MaterialDesignOutlinedComboBox}"
                      FontSize="14"
                      Margin="0,0,0,15">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel>
                            <TextBlock Text="{Binding Name}" FontWeight="Medium"/>
                            <TextBlock Text="{Binding Code}" 
                                       FontSize="11" 
                                       Foreground="Gray"
                                       Margin="0,2,0,0"/>
                        </StackPanel>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>

            <!-- ============================================ -->
            <!-- Тип измерения -->
            <!-- ============================================ -->
            <TextBlock Grid.Row="2" 
                       Text="Тип измерения:"
                       Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                       Foreground="#2196F3"
                       Margin="0,0,0,5"/>

            <ComboBox Grid.Row="3"
                      x:Name="MeasurementTypeComboBox"
                      ItemsSource="{Binding MeasurementTypes}"
                      SelectedItem="{Binding MeasurementType, UpdateSourceTrigger=PropertyChanged}"
                      materialDesign:HintAssist.Hint="Выберите тип измерения"
                      Style="{StaticResource MaterialDesignOutlinedComboBox}"
                      FontSize="14"
                      Margin="0,0,0,15">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding Converter={StaticResource MeasurementTypeConverter}}" />
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>

            <!-- ============================================ -->
            <!-- Значение -->
            <!-- ============================================ -->
            <TextBlock Grid.Row="4" 
                       Text="Значение (мг/л):"
                       Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                       Foreground="#2196F3"
                       Margin="0,0,0,5"/>

            <TextBox Grid.Row="5"
                     Text="{Binding Value, UpdateSourceTrigger=PropertyChanged, StringFormat=N2}"
                     materialDesign:HintAssist.Hint="Введите значение"
                     Style="{StaticResource MaterialDesignOutlinedTextBox}"
                     FontSize="14"
                     Margin="0,0,0,15"/>

            <!-- ============================================ -->
            <!-- Дата измерения -->
            <!-- ============================================ -->
            <TextBlock Grid.Row="6" 
                       Text="Дата измерения:"
                       Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                       Foreground="#2196F3"
                       Margin="0,0,0,5"/>

            <DatePicker Grid.Row="7"
                        SelectedDate="{Binding Date, UpdateSourceTrigger=PropertyChanged}"
                        materialDesign:HintAssist.Hint="Выберите дату"
                        Style="{StaticResource MaterialDesignOutlinedDatePicker}"
                        FontSize="14"
                        Margin="0,0,0,15"/>

            <!-- ============================================ -->
            <!-- Привязка к выпуску или створу -->
            <!-- ============================================ -->
            <TextBlock Grid.Row="8" 
                       Text="Привязка измерения:"
                       Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                       Foreground="#2196F3"
                       Margin="0,0,0,5"/>

            <StackPanel Grid.Row="9" Orientation="Horizontal" Margin="0,0,0,10">
                <RadioButton x:Name="DischargeRadio"
                             Content="К выпуску сточных вод"
                             IsChecked="{Binding IsDischargeSelected, Mode=TwoWay}"
                             Margin="0,0,20,0"
                             Style="{StaticResource MaterialDesignRadioButton}"/>
                <RadioButton x:Name="ControlPointRadio"
                             Content="К контрольному створу"
                             IsChecked="{Binding IsControlPointSelected, Mode=TwoWay}"
                             Style="{StaticResource MaterialDesignRadioButton}"/>
            </StackPanel>

            <!-- ComboBox выпуска -->
            <ComboBox Grid.Row="10"
                      ItemsSource="{Binding Discharges}"
                      SelectedItem="{Binding SelectedDischarge, UpdateSourceTrigger=PropertyChanged}"
                      IsEnabled="{Binding IsChecked, ElementName=DischargeRadio}"
                      materialDesign:HintAssist.Hint="Выберите выпуск"
                      Style="{StaticResource MaterialDesignOutlinedComboBox}"
                      FontSize="14"
                      Margin="0,0,0,15">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel>
                            <TextBlock Text="{Binding Name}" FontWeight="Medium"/>
                            <TextBlock FontSize="11" Foreground="Gray" Margin="0,2,0,0">
                                <Run Text="Код:"/>
                                <Run Text="{Binding Code}"/>
                            </TextBlock>
                        </StackPanel>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>

            <!-- ComboBox створа -->
            <ComboBox Grid.Row="11"
                      ItemsSource="{Binding ControlPoints}"
                      SelectedItem="{Binding SelectedControlPoint, UpdateSourceTrigger=PropertyChanged}"
                      IsEnabled="{Binding IsChecked, ElementName=ControlPointRadio}"
                      materialDesign:HintAssist.Hint="Выберите контрольный створ"
                      Style="{StaticResource MaterialDesignOutlinedComboBox}"
                      FontSize="14"
                      Margin="0,0,0,15">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel>
                            <TextBlock Text="{Binding Name}" FontWeight="Medium"/>
                            <TextBlock FontSize="11" Foreground="Gray" Margin="0,2,0,0">
                                <Run Text="№"/>
                                <Run Text="{Binding Number}"/>
                            </TextBlock>
                        </StackPanel>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>

            <!-- ============================================ -->
            <!-- Кнопки -->
            <!-- ============================================ -->
            <StackPanel Grid.Row="12" 
                        Orientation="Horizontal" 
                        HorizontalAlignment="Right"
                        VerticalAlignment="Bottom">

                <Button Command="{Binding SaveCommand}"
                        Style="{StaticResource MaterialDesignRaisedButton}"
                        Width="140"
                        Height="40"
                        Margin="0,0,15,0"
                        Background="#2196F3"
                        BorderBrush="#2196F3"
                        materialDesign:ButtonAssist.CornerRadius="10"
                        materialDesign:ElevationAssist.Elevation="Dp4">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="ContentSave" 
                                                Width="20" 
                                                Height="20"
                                                VerticalAlignment="Center"/>
                        <TextBlock Text="Сохранить" 
                                  Margin="8,0,0,0"
                                  VerticalAlignment="Center"
                                  FontSize="13"
                                  FontWeight="Medium"/>
                    </StackPanel>
                </Button>

                <Button Command="{Binding CancelCommand}"
                        Style="{StaticResource MaterialDesignRaisedButton}"
                        Width="140"
                        Height="40"
                        Background="#757575"
                        BorderBrush="#757575"
                        materialDesign:ButtonAssist.CornerRadius="10"
                        materialDesign:ElevationAssist.Elevation="Dp4">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="Close" 
                                                Width="20" 
                                                Height="20"
                                                VerticalAlignment="Center"/>
                        <TextBlock Text="Отменить" 
                                  Margin="8,0,0,0"
                                  VerticalAlignment="Center"
                                  FontSize="13"
                                  FontWeight="Medium"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </Grid>
    </materialDesign:Card>
</Window>